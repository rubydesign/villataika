<% ["lootus" , "sun" , "saffron"].each do |room| %>
  <div class="box">
    <div class="boxinner">
      <div class="captionedimage">
        <a href="/images/<%=room%>.jpg" rel="lightbox[suites]" title="<%=t(room+".short")%>">
          <img src="/images/<%=room%>_small.jpg" />
        </a>
      </div>
      <h2> <%= t("#{room}.short")%> </h2>
      <%=raw t("#{room}.full")%>
    </div>
  </div>
<%end%>