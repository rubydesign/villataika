<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= favicon_link_tag %>
  <script type="text/javascript" src="/javascripts/prototype.js"></script>
  <script type="text/javascript" src="/javascripts/scriptaculous.js?load=effects,builder"></script>
  <script type="text/javascript" src="/javascripts/lightbox.js"></script>
  <link rel="stylesheet" href="/stylesheets/lightbox.css" type="text/css" media="screen" />
  
  <meta name="keywords" content="Bed&breakfast Fiskars Suite" />
  <meta name="description" content=" " />
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <title>Villa Taika Bed & Breakfast</title>
</head>

<body>

<div id="main">

  <div id="header">
      <div class="centre">
      <img src="/kuvat/logo_iso.png">
      </div>
      <div id="slogan"><%=t("slogan")%></div>
  </div>

  <div id="lcol">
    <div id="menu">
      <ul>
        <% ["index" , "bed" ,"groups","map","photos","activities"].each do |p| %>
          <li <%=raw('class="active"') if params[:page] == p %>>
            <%= link_to  t(p+'.short') , "/#{@locale}/#{p}.html" %><span>&nbsp;</span>
          </li>
        <%end%>
      </ul>
    </div>
    <div id="menu_end"></div>
    <div id="lcontent">
      <h3 class="first"> 
          <span><%= t "bed.rooms"%></span>
      </h3>
      <ul class="divided">
        <li><%= link_to  t("suites") , "/#{@locale}/suites.html" %></li>
        <li><%= link_to  t("deluxe") , "/#{@locale}/deluxe.html" %></li>
        <li><%= link_to  t("standard") , "/#{@locale}/standard.html" %></li>
      </ul>

      <div class="divider"></div>
    
      <%["fi" ,"se" , "en" ,  "de"].each do |lang| %>
        <a href="<%="/#{lang}#{this_page}"%>" <%="class='selected'" if lang == @locale%>>  
          <img src="/images/<%=lang.to_s%>.gif"/> </a>
      <%end%>

      <h3>
        <a href="/<%=@locale%>/news.html">  <span><%=t("news.short")%></span> </a>
      </h3>
      <div id="news"> 
        <a href="/<%=@locale%>/news.html"> 
          <%= t(t("last")+".short")%> 
        </a>
      </div>
      <div class="divider"></div>
    </div>

  </div>

  <div id="rcol">
    <div id="rcontent">

      <%= yield %>

  </div>
  <div class="divider"></div>

</div>

<div id="footer">
  <div class="kolmas">
    <b>Villa Taika</b>, Fiskarsintie 513, Antskog
    <br>
    www.villataika.fi&nbsp;&nbsp;&nbsp;info@villataika.fi
  </div>
  <div class="kolmas">
    Raisa Kaipainen &amp; Torsten RÃ¼ger
    <br>
    puh 040 704 6689
  </div>
  <div class="kolmas">
    <a href="/<%=@locale%>/index.html">
    <img alt="" src="/kuvat/logo_pien.gif" border="0" height="33" width="198">
    </a>
  </div>
</div>
<div class="divider"></div>
<br/>
<br/>
<br/>
