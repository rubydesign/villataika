<html>
<head>

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <link href="/favicon.ico" rel="shortcut icon" type="image/vnd.microsoft.icon" /> 
  
  <meta name="keywords" content="Bed and breakfast majoitus hotel Fiskars häät  Suite" />
  <meta name="description" content="Bed and Breakfast Villa Taika : <%=t('slogan') + ' ' + t(@page + ".short") %>" />
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta http-equiv="Content-Language" content="<%=@locale%>"/>  
  <title>Bed &amp; Breakfast Villa Taika : <%= t(@page + ".short") %></title>
  
</head>

<body>
<div id="fb-root">
  
</div>
<script>
  (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/fi_FI/sdk.js#xfbml=1&version=v2.0";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));
</script>

<div id="main">

  <div id="header">
      <div class="centre">
        <img src="/images/logo_iso.png" alt="Villa Taika logo"/>
      </div>
      <div id="slogan"><%=t("slogan")%></div>
  </div>

  <div id="lcol">
    <div id="menu">
      <ul>
        <% ["index" , "bed" ,"booking","groups","map","photos","activities"].each do |p| %>
          <li <%=raw('class="active"') if params[:page] == p %>>
            <%= link_to(t(p+'.short') , "/#{@locale}/#{p}.html")%>
          </li>
        <%end%>
      </ul>
    </div>
    <div id="menuend"></div>
    <div id="lcontent">
      <h3 class="first"> 
          <span><%= t "bed.rooms"%></span>
      </h3>
      <ul class="divided">
        <li><%= link_to  t("suites.short") , "/#{@locale}/suites.html" %></li>
        <li><%= link_to  t("deluxe.short") , "/#{@locale}/deluxe.html" %></li>
        <li><%= link_to  t("standard.short") , "/#{@locale}/standard.html" %></li>
      </ul>

      <div class="divider"></div>
    
      <%@locales.each do |lang| %>
        <a href="<%="/#{lang}/#{@page}.html"%>" <%="class='selected'" if lang == @locale%>>
          <img src="/images/<%=lang.to_s%>.gif" alt="<%=lang.to_s%>"/> </a>
      <%end%>

      <h3>
        <a href="/<%=@locale%>/news.html">  <span><%=t("news.short")%></span> </a>
      </h3>
      <div id="news"> 
        <a href="/<%=@locale%>/news.html"> 
          <%= t("news." + news.first + ".short")%> 
        </a>
      </div>
    </div>

  </div>

  <div id="rcol">
    <div id="rcontent">
      <%= yield %>
    </div>
    <div class="divider"></div>
  </div>
</div>

<div id="footer">
  <div class="kolmas">
    <b>Villa Taika</b>, Fiskarsintie 513, Antskog
    <br/>
    www.villataika.fi&nbsp;&nbsp;&nbsp;info@villataika.fi
  </div>
  <div class="kolmas">
    Raisa Kaipainen &amp; Torsten Rüger
    <br/>
    <%=t("puh")%> +358- (0)40 704 6689
  </div>
  <div class="kolmas">
    <a href="/<%=@locale%>/index.html">
    	<img alt="" src="/images/logo_pien.gif" border="0" height="33" width="198"/>
    </a>
  </div>
</div>
<div class="divider"></div>
<br/>
<br/>
<br/>
<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-12603339-2', 'villataika.fi');
  ga('send', 'pageview');

</script>
</body>
</html>
